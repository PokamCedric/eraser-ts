{
  "name": "erp-visual-designer-ts",
  "version": "1.0.0",
  "description": "Real-time Entity Relationship Diagram Generator with DSL - TypeScript Edition",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:rust && tsc && vite build",
    "build:rust": "napi build --platform --release --manifest-path rust/Cargo.toml --target-dir rust/target --output-dir src/infrastructure/layout/native",
    "build:rust:debug": "napi build --platform --manifest-path rust/Cargo.toml --target-dir rust/target --output-dir src/infrastructure/layout/native",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "napi": {
    "napi.binaryName": "layer-classifier-native",
    "targets": {
      "defaults": true
    }
  },
  "keywords": [
    "erp",
    "diagram",
    "dsl",
    "visual-designer",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@napi-rs/cli": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  }
}
